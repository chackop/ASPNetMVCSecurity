@model HPlusSport.Web.Models.Order

@{
    ViewBag.Title = "AdminOrder";
    Layout = "~/Views/_Shared/_LayoutHome.cshtml";
}

<h2>Admin: Order</h2>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Articles)
        </dt>

        <dd>
            @foreach (var article in Model.Articles)
            {
                <p>@article.Name</p>
            }
        </dd>

        <dt>
            Total amount
        </dt>

        <dd>
            @ViewBag.TotalAmount
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "AdminOrders")
</p>
